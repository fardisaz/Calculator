<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<GridPane prefHeight="400" prefWidth="300" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <VBox>
      <HBox>
         <TextArea fx:id="frame" nodeOrientation="RIGHT_TO_LEFT" prefHeight="96.0" GridPane.rowIndex="0" HBox.hgrow="ALWAYS" />
      </HBox>

      <HBox prefHeight="60.0">
         <Button prefHeight="60.0" prefWidth="75.0" text="AC" />
         <Button prefHeight="60.0" prefWidth="75.0" text="+/-" />
         <Button prefHeight="60.0" prefWidth="75.0" text="\%" />
         <Button prefHeight="60.0" prefWidth="75.0" text="รท" onAction="#handleOperator"/>
      </HBox>
      <HBox prefHeight="60.0">
         <Button fx:id="seven" prefHeight="60.0" prefWidth="75.0" text="7" onAction="#handleDigits"/>
         <Button fx:id="eight" prefHeight="60.0" prefWidth="75.0" text="8" onAction="#handleDigits"/>
         <Button fx:id="nine" prefHeight="60.0" prefWidth="75.0" text="9" onAction="#handleDigits"/>
         <Button  prefHeight="60.0" prefWidth="75.0" text="x" onAction="#handleOperator"/>
      </HBox>
      <HBox prefHeight="60.0">
         <Button fx:id="four" prefHeight="60.0" prefWidth="75.0" text="4" onAction="#handleDigits"/>
         <Button fx:id="five" prefHeight="60.0" prefWidth="75.0" text="5" onAction="#handleDigits"/>
         <Button fx:id="six" prefHeight="60.0" prefWidth="75.0" text="6" onAction="#handleDigits"/>
         <Button  prefHeight="60.0" prefWidth="75.0" text="-" onAction="#handleOperator"/>
      </HBox>
      <HBox prefHeight="60.0">
         <Button fx:id="one" prefHeight="60.0" prefWidth="75.0" text="1" onAction="#handleDigits"/>
         <Button fx:id="two" prefHeight="60.0" prefWidth="75.0" text="2" onAction="#handleDigits"/>
         <Button fx:id="three" prefHeight="60.0" prefWidth="75.0" text="3" onAction="#handleDigits"/>
         <Button  prefHeight="60.0" prefWidth="75.0" text="+" onAction="#handleOperator"/>
      </HBox>
      <HBox prefHeight="60.0">
         <children>
            <Button fx:id="zero" prefHeight="60.0" prefWidth="150.0" text="0" onAction="#handleDigits"/>
            <Button prefHeight="60.0" prefWidth="75.0" text="." />
            <Button prefHeight="60.0" prefWidth="75.0" text="=" onAction="#handleOperator"/>
         </children>
      </HBox>
   </VBox>
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
</GridPane>
